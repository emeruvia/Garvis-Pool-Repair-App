<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.objectivecoders.android.garvispoolrepair.CreateClientActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Client"
            android:textSize="30sp"
            android:layout_gravity="center"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="2"
            android:padding="5dp"
            android:rowCount="4">

            <TextView
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_gravity="fill_horizontal"
                android:layout_row="0"
                android:text="@string/client_first_name"
                android:textSize="20sp" />

            <EditText
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill_horizontal"
                android:layout_row="0"
                android:hint="@string/edit_first_name"
                android:inputType="textPersonName"
                android:textSize="20sp" />

            <TextView
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_gravity="fill_horizontal"
                android:layout_row="1"
                android:text="@string/client_last_name"
                android:textSize="20sp" />

            <EditText
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill_horizontal"
                android:layout_row="1"
                android:hint="@string/edit_last_name"
                android:textSize="20sp" />

            <TextView
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_gravity="fill_horizontal"
                android:layout_row="2"
                android:text="@string/client_address"
                android:textSize="20sp" />

            <EditText
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill_horizontal"
                android:layout_row="2"
                android:hint="@string/edit_address"
                android:textSize="20sp" />

            <TextView
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_gravity="fill_horizontal"
                android:layout_row="3"
                android:text="@string/client_email"
                android:textSize="20sp" />

            <EditText
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill_horizontal"
                android:layout_row="3"
                android:hint="@string/edit_email"
                android:inputType="textEmailAddress"
                android:textSize="20sp" />

        </GridLayout>
    </LinearLayout>
</LinearLayout>
