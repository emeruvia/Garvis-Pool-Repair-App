<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <!--TODO check if there is another way of having the list display under
    the custombar created, other than setting it to 60dp margin. This could cause
    layout issues when using other devices that have smaller/bigger screens.-->
    <TextView
        android:id="@+id/work_order_date_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
